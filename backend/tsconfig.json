{
  "compilerOptions": {
    "outDir": "dist",

    // Enable faster development builds
    "incremental": true,

    // Required for typegraphql, see https://typegraphql.ml/docs/installation.html
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es2016", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Required for async/await
    "esModuleInterop": true,

    // Other options
    "resolveJsonModule": true,

    // For debugging
    "sourceMap": true,

  }
}

